<h1>Burgers!</h1>

<div class="container">
  <div class="row">
  <div class="col-8">
    <h3> To Be Eaten! </h3>
    <!-- TO BE EATEN -->
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          <!-- IF DEVOURED = FALSE -->
            <div id="bold">{{burger_name}}</div>
            <button id="{{id}}" type = "button" class="btn">DEVOUR</button>
          {{/unless}}
          {{/each}}
        </ul>
  </div>
  <div class="col-4">
    <h3> DEVOURED!!!!! </h3>
        <!-- DEVOURED CATEGORY -->
        <ul>
          {{#each burgers}}
          {{#if devoured}}
            <!-- IF DEVOURED = TRUE -->
            <div id="bold">{{burger_name}}</div>
          {{/if}}
          {{/each}}
        </ul>
  </div>
  </div>
</div>




