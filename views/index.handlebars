<h1>Burgers!</h1>

<h2>Devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Needs Devouring</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devour??</label><br>
    <input type="radio" name="devoured" value="1" checked> Eat It!<br>
    <input type="radio" name="sleepy" value="0"> Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
